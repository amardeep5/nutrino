<%- include('../partials/header') %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item " aria-current="page"><a href="/">Home</a></li>
    <li class="breadcrumb-item " aria-current="page"><a href="/dishes">Dishes</a></li>
    <li class="breadcrumb-item active" aria-current="page">Results</li>
  </ol>
</nav>
<div class="container">

  <div class="row text-center" >

             <% dishes.forEach(function(dish){ %>
               <div class="col-md-4 col-sm-6" style="margin-bottom: 40px;margin-top: 40px;">
                  <div class=" card border-primary h-100 d-inline-block" >
                    <img class="card-img-top" src="<%=dish.image%>" alt="Card image cap">
                    <div class="card-body d-flex flex-column">
                      <form class="" action="/dish/<%=dish.id%>/fav" method="post">
                        <button type="submit" class="btn btn-danger" >
                            <i class="far fa-heart fa-lg"></i>
                        </button>
                      </form>
                      <hr>
                      <h5 class="card-title"><%=dish.title%></h5>
                      <a href="/dish/<%=dish.id%>/recipe" class="btn btn-primary mt-auto" >Explore</a>
                    </div>
                    <div class="card-footer">
                      <form class="" action="/buy/<%=dish.id%>/<%=dish.title%>" method="get">
                        <button type="submit" class="btn btn-info btn-lg">Buy Now</button>
                      </form>
                      <hr>
                      <form class="" action="/cart/<%=dish.id%>/<%=dish.title%>" method="post">
                        <button type="submit" class="btn btn-success btn-lg">Add to Cart</button>
                      </form>
                    </div>
                  </div>
                 </div>
                 <% }); %>
  </div>
</div>

<%- include('../partials/footer') %>
