<%- include('../partials/header') %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item " aria-current="page"><a href="/landing">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Grocery Search</li>
  </ol>
</nav>
<div class="container">
  <div class="row justify-content-center">
    <h4 style="margin-right:80px;">Search for a product</h4>
     <form class="form-group" action="/grocery-product" method="post">
       <input type="text" name="name" value="" placeholder="search" >
       <button type="submit" class="btn btn-primary" name="button"><i class="fas fa-search">search</i></button>
     </form>
  </div>

<div class="row justify-content-center">
  <%if(products.length>0){%>
    <div class="row justify-content-center">
      <ul class="list-group">
        <%products.forEach(item=>{%>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%=item.title%>
            <a href="/grocery-product/<%=item.id%>"><span class="badge badge-primary badge-pill">Search</span></a>
          </li>
        <%})%>
      </ul>
    </div>
  <%}%>
</div>

</div>

<%- include('../partials/footer') %>
