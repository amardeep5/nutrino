<%- include('../partials/header') %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item " aria-current="page"><a href="/">Home</a></li>
    <li class="breadcrumb-item " aria-current="page"><a href="/wines">wines</a></li>
    <li class="breadcrumb-item active" aria-current="page">results</li>
  </ol>
</nav>
<div class="container">
  <div class="row text-center">
             <% wines.forEach(function(wine){ %>
               <div class="col-md-4 col-sm-6" style="margin-bottom: 40px;margin-top: 40px; ">
                  <div class="card border-primary h-100 d-inline-block" >
                    <img class="card-img-top " src="<%=wine.imageUrl%>" alt="Card image cap">
                    <div class="card-body d-flex flex-column">
                        <span class="mt-auto"><h5 class="card-title mt-auto"><%=wine.title%></h5></span>

                    </div>
                    <div class="card-footer">
                      <span><h5 class="card-title"><%=wine.price%></h5></span>
                      <form class="" action="/buy/<%=wine.id%>/<%=wine.title%>">
                        <button type="submit" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Buy</button>
                      </form>
                    </div>
                  </div>

                 </div>
                 <% }); %>
  </div>

    <div class="row justify-content-center mt-5">
      <div class="card card-body text-center " style="width:50%">
      <div class="card-header">
          <h4>Dishes preffered with this wine</h4>
      </div>
        <%pairs.pairings.forEach(function(pair){%>
          <span><h6><%=pair%></h6></span>
        <%})%>
        <div class="card-footer">
          <p><%=pairs.text%></p>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
