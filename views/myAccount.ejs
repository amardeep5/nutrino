<%- include('partials/header') %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><a href="/landing">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">My Account</li>
  </ol>
</nav>
<div class="container">
  <div class="row justify-content-center container" style="margin-top: 30px; margin-bottom: 30px;">
    <h3>Hi <%=currentUser.username%></h3>
  </div>

<div class="row">
  <div class="col-md-4">
    <div class="container">
      <div class="row justify-content-center container" style="margin-top: 30px; margin-bottom: 30px;">
        <h5>Your Orders</h5>
      </div>
    </div>
    <div class="row " style="margin-bottom: 40px;margin-top: 40px;">

      <%result.orders.forEach((order,i)=>{%>
        <div class="col">
          <h1>order</h1>
          <div class="card text-center bg-success text-white" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">order <%=i%></h5>
            </div>
            <div  class="card-footer text-muted">
              <hr>
              <span class="text-white"> <%= moment(order.createdAt).fromNow() %></span>
            </div >
          </div>
        </div>
      <%})%>
    </div>
  </div>
  <div class="col-md-8">
    <div class="container">
      <div class="row justify-content-center container" style="margin-top: 30px; margin-bottom: 30px;">
        <h5>Your Meal Plans</h5>
      </div>
    </div>
    <div class="row " style="margin-bottom: 40px;margin-top: 40px;">

      <%result.meals.forEach((meal)=>{%>
        <div class="col-md-4">
          <div class="card text-center bg-success text-white" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">Meal Plan</h5>
              <h6 class="card-subtitle mb-2 text-white"> Diet - <%=meal.diet%></h6>
              <h6 class="card-subtitle mb-2 text-white">Calories - <%=meal.targetCalories%></h6>
              <h6 class="card-subtitle mb-2 text-white">Time - <%=meal.timeFrame%></h6>
            </div>
            <div  class="card-footer text-muted">
              <form class="" action="/my-account/meal-plan/<%=meal._id%>" method="post" style="display:inline-block;">
                <button type="submit" class="btn btn-primary" style="display:inline-block;">visit</button>
              </form>
              <form class="delete-form" action="/my-account/<%=meal._id%>/delete?_method=DELETE" method="POST" style="display:inline-block;">
                <button class="btn btn-xs btn-danger" style="display:inline-block;">DELETE</button>
              </form>
              <hr>
              <span class="text-white"> <%= moment(meal.createdAt).fromNow() %></span>
            </div >
          </div>
        </div>
      <%})%>
    </div>
    <div class="container">
      <div class="row justify-content-center container" style="margin-top: 30px; margin-bottom: 30px;">
        <h5>Your Liked dishes</h5>
      </div>
      </div>
    <div class="row" style="margin-bottom: 40px;margin-top: 40px;">

      <%result.favourites.forEach((favourite)=>{%>
        <div class="col-md-4">
          <div class="card text-center bg-warning text-white" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">Favourite</h5>
              <h6 class="card-subtitle mb-2 text-white">Name - <%=favourite.title%></h6>
            </div>
            <div  class="card-footer text-muted">
              <span class="text-white"> <%= moment(favourite.createdAt).fromNow() %></span>
              <hr>
              <form class="delete-form" action="/my-account/fav/<%=favourite._id%>/delete?_method=DELETE" method="POST">
                <button class="btn btn-xs btn-danger">DELETE</button>
              </form>
            </div >
          </div>
        </div>
      <%})%>
    </div>
  </div>
</div>
</div>
<%- include('partials/footer') %>
